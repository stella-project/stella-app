#!/usr/bin/env python3

import pandas as pd 
import sys 
import json
import pickle
import os


f = pickle.load(open("/script/cosine_similarity_matrix_top_10.pkl", "rb"))
def getsimilarityjson(id):
    try:
        return [sim for sim in f if sim["target_items"]==id][0]
    except:
        return None

doc_id = sys.argv[1]
sim = getsimilarityjson(doc_id)

print(sim)

